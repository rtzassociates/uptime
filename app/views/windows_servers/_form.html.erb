<%= error_messages_for @windows_server %>

<%= form_for @windows_server, :html => { :class => "well" } do |f| %>
    
  <%= render :partial => 'server_form_fields', :locals => { :server => @windows_server, :f => f } %>
  
  <fieldset>
    <%= f.label :windows_clients, "Windows Clients" %>
    <%= f.fields_for :windows_clients do |builder| %>
      <%= render 'windows_client_fields', { :f => builder } %>
    <% end %>
    <%= link_to_add_fields "Add a windows client", f, :windows_clients %>
  </fieldset>
  
  <br />
  
  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
  
<% end %>