<h1>Windows Server List</h1>
<h4 class="admin"><%= link_to 'Create a new windows server', new_windows_server_path %></h4>

<table id="windows_servers" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Server Name</th>
      <th>Server Type</th>
      <th>Server Location</th>
      <th>Clients</th>
      <th class="admin"></th>
      <th class="admin"></th>
    </tr>
  </thead>
  <tbody>
    <% @windows_servers.each do |windows_server| %>
      <% cache windows_server do %>
        <tr>
          <td><%= link_to windows_server.name, windows_server %></td>
          <td>
            <% if windows_server.server_type %>
            <%= windows_server.server_type.value %>
            <% end %>
          </td>
          <td>
            <% if windows_server.server_location %>
            <%= link_to windows_server.server_location.name, windows_server.server_location %>
            <% end %>
          </td>
          <td><%= windows_clients_for windows_server %></td>
          <td class="admin"><%= link_to 'Edit', edit_windows_server_path(windows_server) %></td>
          <td class="admin"><%= link_to 'Delete', windows_server, method: :delete, data: { confirm: 'Are you sure?' }, :class => "danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

