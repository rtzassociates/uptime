<h1>Site List</h1>

<% if @sites.empty? %>
<h3>Currently, there are no sites to display</h3>
<% end %>

<% if allow? "sites", "create" %>
  <h4><%= link_to "Create a new site", new_site_path %></h4>
<% end %>

<div class="pull-right">
<%= form_tag sites_path, :method => 'get', :class => "form-search" do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
    <%= button_tag "Search", :name => nil, :class => "btn" %>
  </div>
<% end %>
</div>

<%= render @sites %>
<%= will_paginate @sites %> 