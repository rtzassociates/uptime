<div class="span8 offset2">
  <h1>Reported Problems</h1>
    
  <% if @current_events.empty? %>
  
    <div id="event">
      <h2>Currently, there are no problems reported. Yay!</h2>     
      <% unless Event.all.empty? %>
        <h4 class="green">
          ( It's been <%= time_ago_in_words(Event.last.resolution.resolved_at) %> since the last reported issue )
        </h4>
      <% end %>
    </div>
    
  <% else %>
  
    <% @current_events.each do |event| %>
      <div id="event">
        <div class="event_status-large <%= event.status.value %>">
          <%= event.status.value %>
        </div>
        <p> 
          <%= services_affected_by event %>
        </p>
        <p>
          <%= problem_for event %>
        </p>
        <p class="description">
          <%= event.problem.description %>
        </p>
        <div class="actions">
          <%= link_to 'View this event', event, :class => "nav small" %>
        </div>
      </div>
    <% end %>
    
  <% end %>
</div>

<% if logged_in? %>
  <div class="span4 offset4">
    <div id="report_a_problem">
      <%= link_to "Report a problem", new_event_path %>
    </div>
  </div>
<% end %>