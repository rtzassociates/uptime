<div class="span12">
  <div id="event">
    <% if @event.resolved? %>
      <div id="event_resolved-large">
        <%= resolution_for @event %>
      </div>
    <% end %>
      
    <div class="event_status-large <%= @event.status.value %>">
      <%= @event.status.value %>
    </div>
    
    <div id="event_body">
      <p>
        <%= problem_for @event %>
      </p>
      <p> 
        <%= services_affected_by @event %>
      </p>
      
      <div id="problem">
        <h3>Problem</h3>
        <div class="description">
          <%= @event.problem.description %>
        </div>
        <p>
          <%= link_to 'Edit this problem', edit_event_problem_path(@event) %>
          <%= link_to 'Destroy', event_problem_path(@event), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
        </p>
      </div>    
        
      <% if @event.resolved? %>
        <div id="resolution">
          <h3>Resolution</h4>
          <p>
            <%= resolution_for @event %>
          </p>
          <div class="description">
            <%= @event.resolution.description %>
          </div>
          <p>
            <%= link_to 'Edit Resolution', edit_event_resolution_path(@event) %>
            <%= link_to 'Destroy', event_resolution_path(@event), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
          </p>
        </div>
      <% end %>
    </div>
  
  </div>

  <div class="actions">
    <% unless @event.resolved? %>
      <p>
        <%= link_to 'Mark As Resolved', new_event_resolution_path(@event), :class => "btn" %>
      </p>
    <% end %>
  </div>
  
</div>