<% if task.assigned_users.any? %>
  <%= users_assigned_to task %>.
  <% unless task.unassigned_users.empty? %>
    <%= link_to "Assign an additional user to this task.", new_task_assignment_path(task), :remote => true, :id => "new_assignment_link" %>
  <% end %>
<% else %>
  Nobody is currently assigned to this task.
  <%= link_to "Assign someone to it.", new_task_assignment_path(task), :remote => true, :id => "new_assignment_link" %>
<% end %>