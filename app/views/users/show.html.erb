<h1><%= @user.full_name %></h1>
<h4 class="muted"><%= @user.admin? ? "Admin" : "User" %></h4>
<div class="admin actions">
  <ul>
    <li><%= link_to 'Edit', edit_user_path(@user), :class => "small" %></li>
    <li><%= link_to 'Delete', @user, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger small" %></li>
  </ul>
</div>
<hr>
<h4 class="muted">User Details</h4>

<div class="field">
  <p><strong>Email Addresses:</strong></p>
  <p><%= @user.emails.map { |email| email.address }.join(", ") %></p>
</div>

<div class="field">
  <p><strong>Time Zone:</strong></p> 
  <p><%= @user.time_zone %></p>
</div>

<div class="field">
  <p><strong>Subscriptions:</strong></p>
  <p><%= raw @user.sites.collect { |s| link_to(s.name, site_path(s)) }.to_sentence %></p>
</div>