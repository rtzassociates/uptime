<div id="user">
  <h1><%= @user.full_name %></h1>
  <hr>
  <div class="row">
    <div class="span6">
      <h3>Contact Information</h3>
      <p>
        <strong>Email Addresses:</strong>
        <%= @user.emails.map { |email| email.address }.join(", ") %>
      </p>
      <p>
        <strong>Phone Number:</strong> 
        <%= @user.phone %>
      </p>
      <p>
        <strong>Time Zone:</strong>
        <%= @user.time_zone %>
      </p>
    </div>
    <div class="span5">
      <h3>Subscriptions</h3>
      <p>
        <%= raw @user.services.collect { |s| link_to(s.name, service_path(s)) }.to_sentence %>
      </p>
    </div>
  </div>
  <% if current_user.admin? %>
    <div class="actions pull-right">
      <ul>
        <% if allow? "services", "edit" %>
          <li><%= link_to 'Edit Account', edit_user_path(@user), :class => "small" %></li>
        <% end %>
        <% if allow? "services", "destroy" %>
          <li><%= link_to 'Delete User', @user, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger small" %></li>
        <% end %>
      </ul>
    </div>
    <div class="clearfix"></div>
  <% end %>
</div>

<h3>Problems Reported</h2>
<%= render @reported %>
<%= will_paginate @reported %>