<div id="new_user">
  <%= form_for @user do |f| %>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username, :class => 'input-large' %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'input-large' %>
    </p>
    <div class="actions">
      <%= f.submit (@user.new_record? ? "Sign up" : "Update"), :class => 'btn' %>
    </div>
  <% end %>
</div>