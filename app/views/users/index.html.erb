<h1>User List</h1>
<% if allow? "users", "new" %>
  <h4><%= link_to 'Create a new user', new_user_path %></h4>
<% end %>

<div class="pull-right">
<%= form_tag users_path, :method => 'get', :class => "form-search" do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
    <%= button_tag "Search", :name => nil, :class => "btn" %>
  </div>
<% end %>
</div>

<br />

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Phone Number</th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= will_paginate @users %>