<h1>Tasks</h1>

<% if allow? "tasks", "create" %>
  <h4><%= link_to "Create a new task", new_task_path %></h4>
<% end %>

<div class="pull-right">
<%= form_tag tasks_path, :method => 'get', :class => "form-search" do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
    <%= button_tag "Search", :name => nil, :class => "btn" %>
  </div>
<% end %>
</div>

<br />

<div class="actions">
  <ul>
    <li><%= link_to "All Tasks", tasks_path %></li>
    <li><%= link_to "Uncompleted", uncompleted_tasks_path %></li>
    <li><%= link_to "Unassigned", unassigned_tasks_path %></li>
  </ul>
</div>

<% if @tasks.empty? %>
  <p>Currently, there are no tasks to display.</p>
<% end %>

<br />
  
<%= render @tasks %>
<%= will_paginate @tasks %> 