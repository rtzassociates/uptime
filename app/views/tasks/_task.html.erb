<% if task.is_assigned_to?(current_user) %>
  <div class="assigned_task">
<% else %>
  <div class="task">
<% end %>
  <div class="task_description pull-left">
    <h3>
      <%= link_to task.name.capitalize, task %>
      <% if task.unassigned? %>
        <span class="badge badge-info">Unassigned Task</span>
      <% end %>
      <% if task.completed? %>
        <span class="badge badge-success">Completed</span>
      <% end %>
    </h3>
    <p>
      Created by <%= link_to task.user.username, task.user %> on <%= task.created_at.strftime('%b %e, %Y at %l:%M %p') %>
    </p>
    <p class="muted">
       <%= time_ago_in_words(task.created_at).capitalize %> ago
    </p>
    <p>
       <%= users_assigned_to task %>
    </p>
    <p><%= markdown task.description %></p>
    <p class="muted"><%= pluralize task.task_notes.count, "note" %></p>
  </div>
  <div class="clearfix"></div>
</div>