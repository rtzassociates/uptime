<h1>Sign in</h1>

<div id="new_session">
  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :login, "Username" %>
      <%= text_field_tag :login, params[:login] %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <div class="actions">
      <%= submit_tag "Log in", :class => 'btn' %>
    </div>
  <% end %>
</div>