<div class="row">
  <div id="login" class="span6">  
    <h1>Please Login</h1>
    <%= form_tag sessions_path, :class => "login" do %>
      <div id="inputs" class="large">
        <%= label_tag :login, "Username" %>
        <%= text_field_tag :login, params[:login] %>
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password %>
        <%= label_tag :remember_me, "Remember me" %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      </div>
      <div class="actions">
        <%= submit_tag "Log in", :class => 'btn btn-large btn-success' %>
      </div>
      <div class="clearfix"></div>
      <div class="password_reset">
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>