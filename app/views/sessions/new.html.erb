<div class="row">
  <div id="login" class="span6">  
    <h1>Please Login</h1>
    <%= form_tag sessions_path, :class => "login" do %>
      <div id="inputs" class="large">
        <%= label_tag :username, "Username" %>
        <%= text_field_tag :username, params[:username] %>
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password %>
      </div>
      <div class="actions">
        <%= submit_tag "Log in", :class => 'btn btn-large btn-success' %>
      </div>
      <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="pull-left">
          <%= label_tag :remember_me, "Remember me" %>
        </div>
        <div class="pull-left">
          <%= check_box_tag :remember_me, 1, params[:remember_me], :class => "remember_me" %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="actions">
        <%= submit_tag "Log in", :class => 'btn btn-success' %>
      </div>
      <br />
      <div class="password_reset">
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
