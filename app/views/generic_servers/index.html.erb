<h1>Generic Server List</h1>
<h4 class="admin"><%= link_to 'Create a new Generic Server', new_generic_server_path %></h4>

<table id="generic_servers" class="table table-bordered table-hover datatable">
  <thead>
    <tr>
      <th>Server Name</th>
      <th>Server Type</th>
      <th>Server Role</th>
      <th>Server Location</th>
      <th class="admin"></th>
      <th class="admin"></th>
    </tr>
  </thead>
  <tbody>
    <% @generic_servers.each do |generic_server| %>
      <% cache generic_server do %>
        <tr>
          <td><%= link_to generic_server.name, generic_server %></td>
          <td><%= generic_server.server_type.value %></td>
          <td><%= generic_server.role_name %></td>
          <td>
            <% if generic_server.server_location %>
            <%= link_to generic_server.server_location.name, generic_server.server_location %>
            <% end %>
          </td>
          <td class="admin"><%= link_to 'Edit', edit_generic_server_path(generic_server) %></td>
          <td class="admin"><%= link_to 'Delete', generic_server, method: :delete, data: { confirm: 'Are you sure?' }, :class => "danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

