<%= error_messages_for @database_server %>

<%= form_for @database_server, html: { class: "well" } do |f| %>
    
  <%= render partial: 'server_form_fields', locals: { server: @database_server, f: f } %>
  
  <div class="field">
    <%= f.label :database_ids, "Databases" %>
    <%= f.collection_select :database_ids, Database.order(:name), :id, :name, {}, { multiple: true } %>
  </div>

  <br />
  
  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
  
<% end %>